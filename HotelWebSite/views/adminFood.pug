doctype html
html(lang='pl')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Tranquil Haven Hotel - Admin Panel
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css')
        
        style.
            .roomCard{
                border: 1px solid black;
                padding: 0.2em;
                margin: 0.2em;
                max-width: 40em;
            }
    body
        nav(class='navbar navbar-expand-md bg-body-secondary')
            div(class='container-fluid')
                i(class='bi bi-buildings')
                a(class='navbar-brand me-auto fs-3' href='/') Tranquil Haven Hotel
                button(class='navbar-toggler' type='button' data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded='false' aria-label="Toggle navigation")
                    span(class='navbar-toggler-icon')
                div(class='collapse navbar-collapse' id='navbarNav')
                    ul(class='navbar-nav ms-auto') 
                        li(class='nav-item dropdown')
                            a(class='nav-link dropdown-toggle' href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false') Offer
                            ul(class='dropdown-menu')
                                li
                                    a(class='dropdown-item' href='/rooms') Rooms
                                    a(class='dropdown-item' href='/reviews') Reviews
                                    hr(class='dropdown-divider')
                                    a(class='dropdown-item' href='/reservationInfo') Your reservation
                                    hr(class='dropdown-divider')
                                    a(class='dropdown-item' href='/reservation') Reservation
                        li(class='nav-item')
                            a(class='dropdown-item' href='/admin') Admin Panel

        main
            h1 Add new food:
            form(method='post' action='/admin/foodAdd')
                label(for='type') Type:
                input(type='text' name='type' placeholder='Type')
                br
                label(for='name') Name:
                input(type='text' name='name' placeholder='Name')
                br
                label(for='description') Description:
                input(type='text' name='description' placeholder='Description')
                br
                label(for='price') Price:
                input(type='text' name='price' placeholder='Price')
                br
                input(type='submit' value='Add new food type')
            hr
            h1 All food types:
            hr
            each food in data.foods
                h3 Name: #{food.name}
                h3 Type: #{food.type}
                h3 Description: #{food.description}
                h3 Price: #{food.price}
                form(method='post' action='/admin/foodRemove')
                    input(type='hidden' name='type' value=`${food.type}`)
                    input(type='submit' value='Remove food type')
                hr
            

        footer  
            div(class='bg-body-secondary')
                div(class='row')
                    div(class='col-md-4')
                        p(class='text-center') dcebula@student.agh.edu.pl
                    div(class='col-md-4')
                    div(class='col-md-4')
                        p(class='text-center') Dariusz Cebula 
                            i(class='bi bi-c-circle')
                        

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous') 
