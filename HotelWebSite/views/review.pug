doctype html
html(lang='pl')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Tranquil Haven Hotel - Reviews
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css')
    
    body
        nav(class='navbar navbar-expand-md bg-body-secondary')
            div(class='container-fluid')
                i(class='bi bi-buildings')
                a(class='navbar-brand me-auto fs-3' href='/') Tranquil Haven Hotel
                button(class='navbar-toggler' type='button' data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded='false' aria-label="Toggle navigation")
                    span(class='navbar-toggler-icon')
                div(class='collapse navbar-collapse' id='navbarNav')
                    ul(class='navbar-nav ms-auto') 
                        li(class='nav-item dropdown')
                            a(class='nav-link dropdown-toggle' href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false') Offer
                            ul(class='dropdown-menu')
                                li
                                    a(class='dropdown-item' href='/rooms') Rooms
                                    a(class='dropdown-item' href='/reviews') Reviews
                                    hr(class='dropdown-divider')
                                    a(class='dropdown-item' href='/reservationInfo') Your reservation
                                    hr(class='dropdown-divider')
                                    a(class='dropdown-item' href='/reservation') Reservation
                        li(class='nav-item')
                            a(class='dropdown-item' href='/admin') Admin Panel

        main
            br
            h1 Tranquil Haven Hotel - Reviews
            br
            h3 Average Score: #{data.summary.avgScore}
            h4 Reviews count: #{data.summary.count}
            hr
            h3 Average Categories:
            ul
                li Staff: #{data.summary.avgStaff}
                li Facilities: #{data.summary.avgFacilities}
                li Cleanliness: #{data.summary.avgCleanliness}
                li Comfort: #{data.summary.avgComfort}
                li Value for money: #{data.summary.avgValueForMoney}
                li Location: #{data.summary.avgLocation}
                li Free Wifi: #{data.summary.avgFreeWifi}
            hr
            h4 Add new review:
            form(method='get' action='/addReview')
                input(class='btn btn-primary' type='submit' value='Add review')
            hr
            h4 Filter reviews:
            form(method='post' action='/reviews')
                div(class='mb-3')
                    label(for='topic' class='form-label') Topic
                    input(type='text' class='form-control' id='topic' name='topic' placeholder='Enter a topic')
                div(class='mb-3')
                    label(for='sort' class='form-label') Sort by
                    select(class='form-select' id='sort' name='sort')
                        option(value='score') Score
                        option(value='date') Date
                button(type='submit' class='btn btn-primary') Filter
            hr

            hr
            div(id='reviewContainer')
                each review in data.reviews
                    hr
                    div(class='review')
                        h4 #{review.guest_info.first_name} #{review.guest_info.last_name}
                        h5 Date: #{review.date}
                        hr
                        p #{review.text}
                        hr
                        h4 Score: #{review.score}
                        h5 Staff: #{review.categories.staff} Facilities: #{review.categories.facilities} Cleanliness: #{review.categories.cleanliness} Comfort: #{review.categories.comfort} Value for money: #{review.categories.value_for_money} Location: #{review.categories.location} Free Wifi: #{review.categories.free_wifi}
        footer  
            div(class='bg-body-secondary')
                div(class='row')
                    div(class='col-md-4')
                        p(class='text-center') dcebula@student.agh.edu.pl
                    div(class='col-md-4')
                    div(class='col-md-4')
                        p(class='text-center') Dariusz Cebula 
                            i(class='bi bi-c-circle')
                        

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous') 
